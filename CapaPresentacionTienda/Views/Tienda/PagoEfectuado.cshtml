@{
    ViewBag.Title = "PagoEfectuado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-sm-8 text-center">
            @{
                if ((bool)ViewData["Status"])
                {
                    <div class="alert alert-success p-5">
                        <h1 class="display-4">Gracias</h1>
                        <i class="far fa-check-circle fa-9x my-4"></i>
                        <h2>Pago Realizado</h2>
                        <br />
                        <a href="@Url.Action("Index","Tienda")" class="btn btn-outline-light btn-lg">Volver a la tienda</a>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger p-5">
                        <h1 class="display-4">Lo sentimos</h1>
                        <i class="far fa-exclamation-circle fa-9x my-4"></i>
                        <h2>Su pago no fue realizado</h2>
                        <br />
                        <a href="@Url.Action("Index","Tienda")" class="btn btn-outline-light btn-lg">Volver a la tienda</a>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Add Bootstrap CSS and JavaScript -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Custom CSS -->
<style>
    .alert-success {
        background-color: #28a745; /* Color de fondo verde éxito */
        color: #fff; /* Color de texto blanco */
    }

    .alert-danger {
        background-color: #dc3545; /* Color de fondo rojo peligro */
        color: #fff; /* Color de texto blanco */
    }

    .btn-outline-light {
        color: #fff;
        border-color: #fff;
    }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #000;
        }
</style>